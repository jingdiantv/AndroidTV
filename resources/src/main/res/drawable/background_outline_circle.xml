<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="200" android:exitFadeDuration="0">
    <item android:state_focused="true">
        <ripple android:color="@color/white_dim_33_hex">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="50dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/white" />
                    <corners android:radius="50dp" />
                    <solid android:color="@color/white_dim_33_hex" />
                </shape>
            </item>
        </ripple>
    </item>

    <item>
        <ripple android:color="@color/white_dim_33_hex">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="50dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/white" />
                    <corners android:radius="50dp" />
                    <solid android:color="@color/transparent" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>
